                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn  Header="Комплектация" Width="0.1*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="ShowHideDetails">Изменить</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
